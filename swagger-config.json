  "paths": {
    "/user/signin" : {
      "post" : {
        "tags": ["User"],
        "summary": "Sign in user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "schema" : {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "200"
                    },
                    "status": {
                      "type": "string",
                      "default": "OK"
                    },
                    "data":{
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string"
                        },
                        "refreshToken": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Login Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "401"
                    },
                    "status": {
                      "type": "string",
                      "default": "Unauthorized"
                    },
                    "errors":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Incorrect email or password"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/signup" : {
      "post": {
        "tags": ["User"],
        "summary": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "examples": {
                "example": {
                  "value": {
                    "name": "string",
                    "email": "user@example.com",
                    "password": "string123"
                  }
                }
              },
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "password",
                  "email"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "description": "Password must have number",
                    "minLength": 8
                  },
                  "email" : {
                    "type": "string",
                    "format": "email",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Register Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "200"
                    },
                    "status": {
                      "type": "string",
                      "default": "OK"
                    },
                    "data":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Register Success. Please Log in"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email Invalid or Password doesn't meet criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "400"
                    },
                    "status": {
                      "type": "string",
                      "default": "Bad Request"
                    },
                    "errors":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Error message"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email or Username already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "409"
                    },
                    "status": {
                      "type": "string",
                      "default": "Conflict"
                    },
                    "errors":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Error message"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
