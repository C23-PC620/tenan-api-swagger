{
  "openapi": "3.0.3",
  "info": {
    "title": "Tenan RESTful API",
    "description": "OpenAPI for Tenan RESTful API",
    "version": "1",
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "url": "https://api-dot-tenan.et.r.appspot.com/api/v1"
    }
  ],
  "paths": {
    "/login" : {
      "post" : {
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "schema" : {
                "type": "object",
                "required": [
                  "username",
                  "password"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "200"
                    },
                    "status": {
                      "type": "string",
                      "default": "OK"
                    },
                    "data":{
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string"
                        },
                        "refreshToken": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Login Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "401"
                    },
                    "status": {
                      "type": "string",
                      "default": "Unauthorized"
                    },
                    "data":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Incorrect username or password."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/register" : {
      "post": {
        "summary": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "examples": {
                "example": {
                  "value": {
                    "username": "string",
                    "password": "string123",
                    "email": "user@example.com"
                  }
                }
              },
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "password",
                  "email"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "description": "Password must have number",
                    "minLength": 8
                  },
                  "email" : {
                    "type": "string",
                    "format": "email",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Register Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "default": "200"
                    },
                    "status": {
                      "type": "string",
                      "default": "OK"
                    },
                    "data":{
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "default": "Register Success. Please Log in"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{username}" : {
      "get" : {
        "summary": "Get user details",
        "responses": {

        },
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "description": "username of user",
            "schema" : {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}